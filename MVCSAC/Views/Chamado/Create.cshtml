@model MVCSAC.Models.Chamado

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Chamado</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.TITChamado)
        </div>
        <div class="editor-field focus">
            @Html.EditorFor(model => model.TITChamado)
            @Html.ValidationMessageFor(model => model.TITChamado)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DESCChamado)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.DESCChamado)
            @Html.ValidationMessageFor(model => model.DESCChamado)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DTChamado)
        </div>
        <div class="editor-field">
            @Html.TextBox("DTChamado", DateTime.Now.Date.ToString("MM/dd/yyyy"))
            @Html.ValidationMessageFor(model => model.DTChamado)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SITChamado)
        </div>
        <div class="editor-field">
            @*@Html.DropDownList("SITChamado", (IEnumerable<SelectListItem>)ViewBag.ListSituacao, "-- Select --")*@
            @Html.DropDownList("SITChamado",(SelectList)ViewBag.ListSituacao)
            @Html.ValidationMessageFor(model => model.SITChamado)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CHUsu)
        </div>
        <div class="editor-field">
            @Html.Label("CHUsu",(string)ViewBag.Usuario)
            @*@Html.EditorFor(model => model.CHUsu)*@
            @Html.ValidationMessageFor(model => model.CHUsu)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
